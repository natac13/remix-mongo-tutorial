// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  profile   Profile
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  kudoSent  Kudo[]   @relation("KudoSent")
  kudos     Kudo[]   @relation("KudoReceived")
}

type Profile {
  firstName String
  lastName  String
}

model Kudo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id], name: "KudoSent")
  authorId  String
  to        User     @relation(fields: [toId], references: [id], name: "KudoReceived")
  toId      String
  message   String
  color     Color?   @default(YELLOW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Department {
  HR
  IT
  SALES
  MARKETING
}

enum Color {
  RED
  GREEN
  BLUE
  PURPLE
  YELLOW
  BROWN
}
